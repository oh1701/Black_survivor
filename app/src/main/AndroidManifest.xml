<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.black_survivor.black_survivor_dictinary">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        android:usesCleartextTraffic="true"
        android:networkSecurityConfig="@xml/network_security_config">


        <activity android:name="com.black_survivor.black_survivor_dictinary.close_app"
            android:label="종료하시겠습니까?"
            android:theme="@style/Theme.AppCompat.Dialog"></activity>

        <activity android:name="com.black_survivor.black_survivor_dictinary.internet" />

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-8417791108068506~7524991405" />

        <activity android:name="com.black_survivor.black_survivor_dictinary.creature" />
        <activity android:name="com.black_survivor.black_survivor_dictinary.map_explan" />
        <activity android:name="com.black_survivor.black_survivor_dictinary.weaponskill" />
        <activity android:name="com.black_survivor.black_survivor_dictinary.profile" />
        <activity android:name="com.black_survivor.black_survivor_dictinary.profilemovie" />
        <activity android:name="com.black_survivor.black_survivor_dictinary.skill_information" />
        <activity android:name="com.black_survivor.black_survivor_dictinary.video" />
        <activity android:name="com.black_survivor.black_survivor_dictinary.imsi" />
        <activity
            android:name="com.black_survivor.black_survivor_dictinary.popup"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />

        <meta-data
            android:name="android.max_aspect"
            android:value="2.1" />

        <activity
            android:name="com.black_survivor.black_survivor_dictinary.Item"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name="com.black_survivor.black_survivor_dictinary.Character_mini"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name="com.black_survivor.black_survivor_dictinary.Character"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name="com.black_survivor.black_survivor_dictinary.MainActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustNothing">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>