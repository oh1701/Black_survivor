                app:layout_constraintLeft_toRightOf="@id/imup_text2"
                app:layout_constraintRight_toLeftOf="@id/imup_text4"
                app:layout_constraintBottom_toBottomOf="parent"
                android:gravity="center"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"/>

            <ImageButton
                android:id="@+id/imup_4"
                android:layout_width="0dp"
                android:layout_height="50dp"
                app:layout_constraintTop_toBottomOf="@id/te4"
                app:layout_constraintLeft_toRightOf="@id/imup_3"
                app:layout_constraintRight_toLeftOf="@id/imup_5"
                app:layout_constraintBottom_toTopOf="@id/imup_text4"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:background="#50000000"/>
            <TextView
                android:id="@+id/imup_text4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="10dp"
                android:text=""
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/imup_4"
                app:layout_constraintLeft_toRightOf="@id/imup_text3"
                app:layout_constraintRight_toLeftOf="@id/imup_text5"
                app:layout_constraintBottom_toBottomOf="parent"
                android:gravity="center"
