                android:background="#50000000"/>
            <TextView
                android:id="@+id/imdown_text4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="10dp"
                android:text=""
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/imdown_4"
                app:layout_constraintLeft_toRightOf="@id/imdown_text3"
                app:layout_constraintRight_toLeftOf="@id/imdown_text5"
