                android:textSize="10dp"
                android:text=""
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/imdown_2"
                app:layout_constraintLeft_toRightOf="@id/imdown_text1"
                app:layout_constraintRight_toLeftOf="@id/imdown_text3"
                app:layout_constraintBottom_toBottomOf="parent"
                android:gravity="center"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"/>

            <ImageView
                android:id="@+id/imdown_3"
                android:layout_width="0dp"
                android:layout_height="50dp"
                app:layout_constraintTop_toBottomOf="@id/te5"
                app:layout_constraintLeft_toRightOf="@id/imdown_2"
                app:layout_constraintRight_toLeftOf="@id/imdown_4"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                app:layout_constraintBottom_toTopOf="@id/imdown_text3"
                android:background="#50000000"/>
            <TextView
                android:id="@+id/imdown_text3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="10dp"
                android:text=""
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/imdown_3"
                app:layout_constraintLeft_toRightOf="@id/imdown_text2"
                app:layout_constraintRight_toLeftOf="@id/imdown_text4"
                app:layout_constraintBottom_toBottomOf="parent"
