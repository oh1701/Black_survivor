                app:layout_constraintRight_toLeftOf="@id/imup_6"
                app:layout_constraintBottom_toTopOf="@id/imup_text5"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:background="#50000000"/>
            <TextView
                android:id="@+id/imup_text5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="10dp"
                android:text=""
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/imup_5"
                app:layout_constraintLeft_toRightOf="@id/imup_text4"
                app:layout_constraintRight_toLeftOf="@id/imup_text6"
