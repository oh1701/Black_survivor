<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Character_mini"
    android:background="#242327"
    android:orientation="vertical"
    android:weightSum="5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_weight="1.8">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4.1">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:scaleType="fitXY"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toTopOf="@id/text"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="10dp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:id="@+id/mini"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                app:layout_constraintTop_toBottomOf="@id/mini"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:text="임시"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:background="@drawable/white_text"
                android:id="@+id/text"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="5.9">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="0, 1, 2, 3"
            android:weightSum="12"
            >
            <TableRow
                android:layout_height="0dp"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/avility"
                    android:text="능력치"
                    android:textColor="@color/white"
                    android:background="@drawable/ability"
                    android:layout_span="4"
                    android:gravity="center"
                    android:layout_marginTop="10dp" />
            </TableRow>
            <TableRow
                android:layout_height="0dp"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/nuul"
                    android:text=""
                    android:background="@drawable/ability" />
                <TextView
                    android:id="@+id/level1"
                    android:text="레벨1"
                    android:textColor="@color/white"
                    android:background="@drawable/ability_bottom"
                    android:gravity="center" />
                <TextView
                    android:id="@+id/level20"
                    android:text="레벨20"
                    android:textColor="@color/white"
                    android:background="@drawable/ability_bottom"
                    android:gravity="center" />
                <TextView
                    android:id="@+id/ability_point"
                    android:text="성장치"
                    android:textColor="@color/white"
                    android:background="@drawable/ability_bottom"
                    android:gravity="center" />
            </TableRow>
            <TableRow
                android:layout_height="0dp"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/at1"
                    android:text="공격력"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@drawable/ability_bottom"/>
                <TextView
                    android:id="@+id/at2"
                    android:text=""
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@drawable/ability_bottom"/>
                <TextView
                    android:id="@+id/at3"
                    android:text=""
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@drawable/ability_bottom"/>
                <TextView
                    android:id="@+id/at4"
                    android:text=""
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@drawable/ability_bottom"/>
            </TableRow>
            <TableRow
                android:layout_height="0dp"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/hp1"
                    android:text="체력"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@drawable/ability_bottom"/>
                <TextView
                    android:id="@+id/hp2"
                    android:text=""
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@drawable/ability_bottom"/>
                <TextView
                    android:id="@+id/hp3"
                    android:text=""
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@drawable/ability_bottom"/>
                <TextView
                    android:id="@+id/hp4"
                    android:text=""
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@drawable/ability_bottom"/>
            </TableRow>
            <TableRow
                android:layout_height="0dp"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/hpr1"
                    android:text="체력 재생"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@drawable/ability_bottom"/>
                <TextView
                    android:id="@+id/hpr2"
                    android:text=""
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@drawable/ability_bottom"/>
                <TextView
                    android:id="@+id/hpr3"
                    android:text=""
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@drawable/ability_bottom"/>
                <TextView
                    android:id="@+id/hpr4"
                    android:text=""
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@drawable/ability_bottom"/>
            </TableRow>
            <TableRow
                android:layout_height="0dp"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/st1"
                    android:text="스태미너"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@drawable/ability_bottom"/>
                <TextView
                    android:id="@+id/st2"
                    android:text=""
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@drawable/ability_bottom"/>
                <TextView
                    android:id="@+id/st3"
                    android:text=""
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@drawable/ability_bottom"/>
                <TextView
                    android:id="@+id/st4"
                    android:text=""
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@drawable/ability_bottom"/>
            </TableRow>
            <TableRow
                android:layout_height="0dp"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/str1"
                    android:text="스태미너 재생"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@drawable/ability_bottom"/>
                <TextView
                    android:id="@+id/str2"
                    android:text=""
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@drawable/ability_bottom"/>
                <TextView
                    android:id="@+id/str3"
                    android:text=""
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@drawable/ability_bottom"/>
                <TextView
                    android:id="@+id/str4"
                    android:text=""
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@drawable/ability_bottom"/>
            </TableRow>
            <TableRow
                android:layout_height="0dp"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/def1"
                    android:text="방어력"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@drawable/ability_bottom"/>
                <TextView
                    android:id="@+id/def2"
                    android:text=""
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@drawable/ability_bottom"/>
                <TextView
                    android:id="@+id/def3"
                    android:text=""
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@drawable/ability_bottom"/>
                <TextView
                    android:id="@+id/def4"
                    android:text=""
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@drawable/ability_bottom"/>
            </TableRow>
            <TableRow
                android:layout_height="0dp"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/ats1"
                    android:text="공격 속도"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@drawable/ability_bottom"/>
                <TextView
                    android:id="@+id/ats2"
                    android:text=""
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@drawable/ability_bottom"/>
                <TextView
                    android:id="@+id/ats3"
                    android:text=""
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@drawable/ability_bottom"/>
                <TextView
                    android:id="@+id/ats4"
                    android:text=""
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@drawable/ability_bottom"/>
            </TableRow>
            <TableRow
                android:layout_height="0dp"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/cri1"
                    android:text="치명타"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@drawable/ability_bottom"/>
                <TextView
                    android:id="@+id/cri2"
                    android:text=""
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@drawable/ability_bottom"/>
                <TextView
                    android:id="@+id/cri3"
                    android:text=""
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@drawable/ability_bottom"/>
                <TextView
                    android:id="@+id/cri4"
                    android:text=""
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@drawable/ability_bottom"/>
            </TableRow>
            <TableRow
                android:layout_height="0dp"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/sp1"
                    android:text="이동속도"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@drawable/ability_bottom"/>
                <TextView
                    android:id="@+id/sp2"
                    android:text=""
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@drawable/ability_bottom"/>
                <TextView
                    android:id="@+id/sp3"
                    android:text=""
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@drawable/ability_bottom"/>
                <TextView
                    android:id="@+id/sp4"
                    android:text=""
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@drawable/ability_bottom"/>
            </TableRow>
            <TableRow
                android:layout_height="0dp"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/vi1"
                    android:text="시야"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@drawable/ability_bottom" />
                <TextView
                    android:id="@+id/vi2"
                    android:text=""
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@drawable/ability_bottom"/>
                <TextView
                    android:id="@+id/vi3"
                    android:text=""
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@drawable/ability_bottom"/>
                <TextView
                    android:id="@+id/vi4"
                    android:text=""
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@drawable/ability_bottom"/>
            </TableRow>
        </TableLayout>

    </LinearLayout>
    </LinearLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3"
        android:weightSum="3">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/text_weapon"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:textStyle="italic"
            android:layout_weight="1"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textColor="#CFBD13"
            android:background="#2B2B2B"
            android:text="<해당 캐릭터의 사용 무기>"/>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/ch_weapon1"
            android:layout_width="250dp"
            android:layout_height="100dp"
            app:layout_constraintTop_toBottomOf="@id/text_weapon"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="gone"/>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/ch_weapon2"
            android:layout_width="250dp"
            android:layout_height="100dp"
            app:layout_constraintTop_toBottomOf="@id/text_weapon"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="gone"/>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/ch_weapon3"
            android:layout_width="250dp"
            android:layout_height="100dp"
            app:layout_constraintTop_toBottomOf="@id/text_weapon"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="gone"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.9">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/skill_information"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="40dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="40dp"
            app:layout_constraintRight_toLeftOf="@id/movie"
            android:background="@color/white"
            android:text="스킬 정보"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/movie"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:textSize="16sp"
            android:text="소개 영상"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="40dp"
            app:layout_constraintLeft_toRightOf="@id/skill_information"
            android:layout_marginLeft="20dp"
            app:layout_constraintRight_toLeftOf="@id/stats"
            android:layout_marginRight="20dp"
            android:background="@color/white" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/stats"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:textSize="16sp"
            android:text="통계"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="40dp"
            app:layout_constraintLeft_toRightOf="@id/movie"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="40dp"
            android:background="@color/white" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/root"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:textSize="16sp"
            android:text="추천 루트"
            app:layout_constraintTop_toTopOf="@id/skill_information"
            android:layout_marginTop="40dp"
            app:layout_constraintLeft_toRightOf="@id/movie"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="40dp"
            android:background="@color/white" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/notarget"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:textSize="16sp"
            android:text="안정함"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="40dp"
            app:layout_constraintLeft_toRightOf="@id/movie"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="40dp"
            android:background="@color/white" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</LinearLayout>